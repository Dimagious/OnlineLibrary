    <servlet>
        <servlet-name>UserMenu</servlet-name>
        <servlet-class>controllers.UserMenu</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserMenu</servlet-name>
        <url-pattern>/usermenu</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminMenu</servlet-name>
        <servlet-class>controllers.AdminMenu</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AdminMenu</servlet-name>
        <url-pattern>/adminmenu</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ShowAllBooks</servlet-name>
        <servlet-class>controllers.ShowAllBooks</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ShowAllBooks</servlet-name>
        <url-pattern>/allbooks</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SearchBookByAuthor</servlet-name>
        <servlet-class>controllers.SearchBookByAuthor</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SearchBookByAuthor</servlet-name>
        <url-pattern>/searchbooksbyauthor</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SearchBookByGenre</servlet-name>
        <servlet-class>controllers.SearchBookByGenre</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SearchBookByGenre</servlet-name>
        <url-pattern>/searchbooksbygenre</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SearchBookByTitle</servlet-name>
        <servlet-class>controllers.SearchBookByTitle</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SearchBookByTitle</servlet-name>
        <url-pattern>/searchbooksbytitle</url-pattern>
